{
  "compilerOptions": {
    "target": "ESNext", // Latest JS features
    "module": "CommonJS", // Use CommonJS for compatibility with Node.js
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Allow default imports from modules with no default export
    "skipLibCheck": true, // Skip type-checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in imports
    "rootDir": "./", // Root directory for the project
    "outDir": "./dist", // Output directory for compiled files
    "resolveJsonModule": true, // Allow importing .json files
    "types": ["node", "hardhat"] // Include Hardhat and Node.js types
  },
  "include": ["contracts", "scripts"], // Include contract and script directories
  "exclude": ["node_modules"] // Exclude dependencies
}

  